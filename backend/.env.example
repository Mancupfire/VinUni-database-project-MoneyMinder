# =============================================================================
# MoneyMinder Backend Configuration
# =============================================================================
# IMPORTANT: Copy this file to .env and update ALL values before running!
# DO NOT use these default values in production!
# =============================================================================

# Database Configuration
DB_HOST=localhost
DB_USER=moneyminder_app
DB_PASSWORD=CHANGE_THIS_TO_YOUR_DATABASE_PASSWORD
DB_NAME=MoneyMinder_DB
DB_PORT=3306

# =============================================================================
# SECURITY CONFIGURATION - MUST CHANGE BEFORE PRODUCTION
# =============================================================================

# Secret key for Flask sessions (generate with: python -c "import secrets; print(secrets.token_urlsafe(64))")
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_64_CHAR_SECRET_KEY_GENERATED_RANDOMLY

# JWT Secret Key - MUST be at least 32 characters
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_64_CHAR_JWT_SECRET_KEY_GENERATED_RANDOMLY

# JWT Token expiration in hours
JWT_EXPIRATION_HOURS=24

# =============================================================================
# Application Configuration
# =============================================================================

# Environment: development, testing, production
FLASK_ENV=development

# Debug mode (set to False in production!)
FLASK_DEBUG=True

# =============================================================================
# Server Configuration
# =============================================================================

PORT=5000
HOST=0.0.0.0

# =============================================================================
# Security Settings
# =============================================================================

# Force HTTPS (set to true in production with SSL)
FORCE_HTTPS=false

# Allowed CORS origins (comma-separated, use specific domains in production)
# Example: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# Rate limiting storage (use redis:// in production)
RATE_LIMIT_STORAGE=memory://

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable security audit logging
ENABLE_AUDIT_LOG=true
